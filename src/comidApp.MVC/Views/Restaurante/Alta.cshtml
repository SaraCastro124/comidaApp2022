@using comidApp.Core;
@model Restaurante;
@{
    ViewData["Title"] = "Restaurante - Alta";
}

<form asp-controller="Restaurante" asp-action="Alta" method="post">
    <div asp-validation-summary="All"></div>
    <div><input type="hidden" asp-for="@Model.idRestaurante" /></div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="idRestaurante" class="col-form-label">idRestaurante</label>
        </div>
        <div class="col-auto">
            <input asp-for="idRestaurante" class="form-control" />
        </div>
    </div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Email" class="col-form-label">Email</label>
        </div>
        <div class="col-auto">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Nombre" class="col-form-label">Nombre</label>
        </div>
        <div class="col-auto">
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Domicilio" class="col-form-label">Domicilio</label>
        </div>
        <div class="col-auto">
            <input asp-for="Domicilio" class="form-control" />
        </div>
        <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Clave" class="col-form-label">Clave</label>
        </div>
        <div class="col-auto">
            <input asp-for="Clave" class="form-control" />
        </div>






    <div class="col-auto">
            <button class="btn btn-primary" type="button" onclick="mostrar('bandera', 'abreviatura')">
                Previsualizaci√≥n <i class="bi bi-eye"></i>
            </button>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">
                <img class="img-fluid border border-dark" id="bandera" alt="">
            </div>
        </div>
        <br>
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                @if (Model is null)
                {
                    <button type="submit" class="btn btn-primary">@texto</button>
                }
                else
                {
                    <button type="submit" class="btn btn-warning">@texto</button>
                }
            </div>
        </div>
    </div>
</form>

